<% provide(:title, 'Create advertisement') %>
<h1>Create advertisement</h1>

<div class="row">
  <div class="span6 offset3">
	<%= form_for([@board, @advertisement]) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>

	  <%= f.label :height %>
	  <%= f.text_field :height %>

	  <%= f.label :width %>
	  <%= f.text_field :width %>

	  <%= f.label :x_location, 'X Location' %>
	  <%= f.text_field :x_location %>

	  <%= f.label :y_location, 'Y Location' %>
	  <%= f.text_field :y_location %>

	  <%= f.label :image_contents %>
	  <%= f.file_field(:image_contents) %>

      <%= f.submit "Create advertisement", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
