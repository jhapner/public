<% provide(:title, 'Create board') %>
<h1>Create board</h1>

<div class="row">
  <div class="span6 offset3">
	<%= form_for(@board) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>

	  <%= f.label :name %>
	  <%= f.text_field :name %>

	  <%= f.label :height %>
	  <%= f.text_field :height %>

	  <%= f.label :width %>
	  <%= f.password_field :width %>

	  <%= f.label :timezone %>
	  <%= f.collection_select :timezone, ActiveSupport::TimeZone.us_zones, :name, :to_s %>
      <%= f.submit "Create board", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
